<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">

<node>
  <interface name="com.dooshek.voicify.Recorder">
    <!-- Methods -->
    <method name="ToggleRecording">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="toggle_recording"/>
    </method>

    <method name="GetStatus">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="get_status"/>
      <arg name="is_recording" type="b" direction="out"/>
    </method>

    <method name="StartPostTranscriptionRecording">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="start_post_transcription_recording"/>
    </method>

    <method name="StopPostTranscriptionRecording">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="stop_post_transcription_recording"/>
    </method>

    <!-- Signals -->
    <signal name="RecordingStarted">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="recording_started"/>
    </signal>

    <signal name="TranscriptionReady">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="transcription_ready"/>
      <arg name="text" type="s"/>
    </signal>

    <signal name="RecordingError">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="recording_error"/>
      <arg name="error" type="s"/>
    </signal>

    <!-- Live input level during recording (double in range ~[0.0, 1.2]) -->
    <signal name="InputLevel">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="input_level"/>
      <arg name="level" type="d"/>
    </signal>

    <!-- Request paste signal for plugins to trigger text insertion -->
    <signal name="RequestPaste">
      <annotation name="org.freedesktop.DBus.GLib.CSymbol" value="request_paste"/>
      <arg name="text" type="s"/>
    </signal>
  </interface>
</node>
